                            </Menu>
                          </menus>
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </MenuBar>
                     </children>
                     <BorderPane.margin>
                        <Insets right="200.0" />
                     </BorderPane.margin>
                  </VBox>
                  <Button fx:id="exitButton" layoutX="200.0" mnemonicParsing="false" onAction="#exitBottonClick" text="Exit" />
