<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onMouseClicked="#mouseClicked" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.MyViewController">
   <top>
      <BorderPane prefHeight="27.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <center>
            <AnchorPane prefHeight="100.0" prefWidth="600.0" BorderPane.alignment="CENTER">
               <children>
                  <VBox fx:id="menuBox">
                     <children>
                        <MenuBar prefHeight="25.0">
                          <menus>
                            <Menu fx:id="file_button" mnemonicParsing="false" text="File">
                              <items>
                                <MenuItem fx:id="newButton" mnemonicParsing="false" onAction="#newButtonClick" text="New" />
                                    <MenuItem fx:id="saveButton" mnemonicParsing="false" onAction="#saveButtonClick" text="Save" />
                                    <MenuItem fx:id="loadButton" mnemonicParsing="false" onAction="#loadButtonClick" text="Load" />
