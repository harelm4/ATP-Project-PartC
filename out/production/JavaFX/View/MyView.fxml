                  <Button fx:id="aboutButton" layoutX="110.0" mnemonicParsing="false" onAction="#aboutButtonClick" text="About" />
                  <Button fx:id="solButton" layoutX="506.0" layoutY="1.0" mnemonicParsing="false" onAction="#showSolution" text="Show Solution" />
               </children>
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
            </AnchorPane>

         </center>
      </BorderPane>
   </top>
   <center>
      <Pane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" >
          <children>
                            <MazeDisplayer fx:id="mazeDisplayer" onKeyPressed="#keyPressed" height="400.0" width="400.0" />
          </children>
      </Pane>
   </center>

</BorderPane>
